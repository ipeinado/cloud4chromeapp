{
	"name": "Cloud4Chrome App",
	"version": "0.0",
	"manifest_version": 2,
	"description": "An implementation of Cloud4all for Google Chrome",
	"minimum_chrome_version": "25",
	
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	
	"app": {
		"background": {
			"scripts": [
				"main.js"
			]
		}
	},
	
	"permissions": [
		"webview",
		"fullscreen"
	]
}